<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ahmadabuhasan.keloladata">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_logo_tmdb"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_tmdb_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KelolaData">
        <activity android:name=".ui.favorite.FavoriteActivity" />
        <activity android:name=".ui.detail.DetailTVShowActivity" />
        <activity android:name=".ui.detail.DetailMovieActivity" />
        <activity android:name=".ui.home.HomeActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>